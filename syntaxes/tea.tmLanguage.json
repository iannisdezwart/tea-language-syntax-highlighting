{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tea",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#string"
		},
		{
			"include": "#char"
		},
		{
			"include": "#stl-types"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.tea",
			"match": "\\/\\/.*\\n"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.tea",
				"match": "\\b(if|else|return|while|for|break|continue|goto)\\b"
			}]
		},
		"string": {
			"name": "string.quoted.double.tea",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tea",
					"match": "\\\\."
				}
			]
		},
		"char": {
			"name": "string.quoted.single.tea",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "char.escape.tea",
					"match": "\\\\."
				}
			]
		},
		"stl-types": {
			"patterns": [{
				"name": "support.type.stl-types.tea",
				"match": "\\b(u8|i8|u16|i16|u32|i32|u64|u64|void)\\b"
			}]
		}
	},
	"scopeName": "source.tea"
}